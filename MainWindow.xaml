<Window x:Class="StoryTelling1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StoryTelling1"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding SystemParameters.PrimaryScreenHeight}" Width="{Binding SystemParameters.PrimaryScreenWidth}" Closed="closedWindow">
    <Grid>
        <Image x:Name="banner" Height="{Binding SystemParameters.PrimaryScreenHeight}" VerticalAlignment="Top">
            <Image.Source>
                <BitmapImage UriSource="GUI/image/DefendYourCountryBanner.jpg"/>
            </Image.Source>
        </Image>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Margin="0,0,10,10" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</Window>
